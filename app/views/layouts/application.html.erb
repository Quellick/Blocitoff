<html>
  <head>
    <title>Blocitoff</title>
    <%= csrf_meta_tags %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">  
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <ul class="nav nav-tabs">
      <li><%= link_to "Bloccit", root_path %></li>
      <li><%= link_to "About", welcome_about_path %></li>
      <% if user_signed_in? %>
        <li class="navbar-link">Signed in as: <strong><%= current_user.email %></strong></li>
        <li class="navbar-link"><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
      <% else %>
        <li class="navbar-link"><%= link_to "Sign In", new_user_session_path %></li>
        <li class="navbar-link"><%= link_to "Sign Up", new_user_registration_path %></li>
      <% end %>
    </ul>

    <%= yield %>
    </div>
  </body>
</html>